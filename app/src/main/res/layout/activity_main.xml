<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:id="@+id/choose_quiz"
    tools:context="nyc.c4q.buzzquiz.view.MainActivity"
    android:background="@drawable/gradient_background"
    android:layout_weight="2">

    <android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="303dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="5dp"
        android:layout_marginStart="5dp"
        android:layout_gravity="center_vertical"
        card_view:cardBackgroundColor="@color/lesstransparent"
        card_view:cardCornerRadius="5dp"
        card_view:cardElevation="2dp"
        card_view:cardUseCompatPadding="true">

        <LinearLayout
            android:layout_marginTop="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:gravity="center"
                android:layout_marginTop="5dp"
                android:text="Which dessert are you?"
                android:textColor="@color/white"
                android:textSize="25dp" />

            <ImageView
                android:id="@+id/quizOne_image"
                android:layout_width="300dp"
                android:layout_height="230dp"
                android:layout_gravity="center"
                android:layout_marginTop="-30dp"
                android:src="@drawable/dessert" />

            <Button
                android:id="@+id/quiz01"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="30dp"
                android:layout_marginStart="30dp"
                android:layout_marginTop="-20dp"
                android:background="@color/whiteopacity"
                android:text="Take Quiz" />

        </LinearLayout>


    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="1dp"
        android:layout_marginStart="5dp"
        android:layout_marginEnd="5dp"
        card_view:cardBackgroundColor="@color/lesstransparent"
        card_view:cardCornerRadius="5dp"
        card_view:cardElevation="2dp"
        card_view:cardUseCompatPadding="true"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_margin="5dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:gravity="center"
                android:layout_marginTop="5dp"
                android:text="Dork, Nerd or Geek?"
                android:textColor="@color/white"
                android:textSize="25dp" />

            <ImageView
                android:id="@+id/quizTwo_image"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <Button
                android:id="@+id/quiz02"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="30dp"
                android:layout_marginStart="30dp"
                android:layout_marginTop="13dp"
                android:background="@color/whiteopacity"
                android:text="Take Quiz"
                />

        </LinearLayout>


    </android.support.v7.widget.CardView>


</LinearLayout>
